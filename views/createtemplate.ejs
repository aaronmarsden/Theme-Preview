<% include partials/header %>

<h2>Create New Template</h2>

<form action="/templates" method="POST" enctype="multipart/form-data">

    <input type="text" placeholder="name" name="name">
    <br>
    <input type="text" placeholder="description" name="description">
    <br>
    <input type='file' name="previewImage" id="imageUpload" accept=".png, .jpg, .jpeg" required />
    <br>
    <textarea style="width: 50%; height: 200px; padding: 0.5rem; font-size: 1rem; border: 1px solid #D9D9D9; border-radius: 3px; box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.1);" name="body" id="content" placeholder="Type your content here..."></textarea>
    <br>
    <button type="submit">Submit</button>

</form>